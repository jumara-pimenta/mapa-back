{
  "name": "sonar-rotas-backend",
  "version": "2.5.3",
  "description": "API de gerenciamento de rotas de colaboradores",
  "author": "Grupo ICTS",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "start:debug": "nest start --debug --watch",
    "build": "nest build",
    "start": "npx prisma migrate dev && nest start",
    "start:dev": "npx prisma migrate dev && nest start --watch",
    "migrate:prod": "npx prisma migrate deploy",
    "migrate:dev": "npx prisma migrate dev",
    "generate:schemas": "prisma generate",
    "test:watch": "jest --watchAll",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "MOCK_SERVER=true jest --config ./test/jest-e2e.json --runInBand --forceExit",
    "pretest:e2e": "docker-compose -f docker-compose.test.yml down && docker-compose -f docker-compose.test.yml up -d && ./wait-for-it.sh && yarn migrate:prod"
  },
  "dependencies": {
    "@faker-js/faker": "8.0.2",
    "@golevelup/ts-jest": "^0.4.0",
    "@nestjs/common": "10.2.5",
    "@nestjs/config": "3.0.1",
    "@nestjs/core": "10.2.5",
    "@nestjs/jwt": "10.1.1",
    "@nestjs/platform-express": "10.2.5",
    "@nestjs/platform-socket.io": "10.2.5",
    "@nestjs/schedule": "3.0.3",
    "@nestjs/swagger": "7.1.11",
    "@nestjs/websockets": "10.2.5",
    "@prisma/client": "5.2.0",
    "@turf/turf": "^6.5.0",
    "@types/google.maps": "3.54.0",
    "axios": "1.5.0",
    "bcrypt": "5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "class-validator-jsonschema": "5.0.0",
    "crypto": "^1.0.1",
    "date-fns": "2.30.0",
    "date-fns-tz": "2.0.0",
    "fs": "^0.0.1-security",
    "google-maps": "^4.3.3",
    "googlemaps": "^1.12.0",
    "moment": "^2.29.4",
    "mssql": "10.0.0",
    "nestjs-request-context": "3.0.0",
    "node-xlsx": "0.23.0",
    "path": "^0.12.7",
    "promisify": "^0.0.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "7.8.1",
    "source-map-support": "^0.5.21",
    "uuid": "9.0.0",
    "xlsx": "^0.18.5",
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "@nestjs/cli": "10.1.17",
    "@nestjs/schematics": "10.0.2",
    "@nestjs/testing": "10.2.5",
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^5.0.0",
    "@types/date-fns": "^2.6.0",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.4",
    "@types/multer": "^1.4.7",
    "@types/node": "20.6.0",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "9.0.3",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "eslint-plugin-prettier": "5.0.0",
    "jest": "29.6.4",
    "prisma": "5.2.0",
    "standard-version": "^9.3.2",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "9.4.4",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "clearMocks": true,
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 60,
        "lines": 70,
        "statements": 70
      }
    },
    "preset": "ts-jest",
    "restoreMocks": true,
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "/node_modules/",
      "\\.pnp\\.[^\\/]+$",
      ".module.ts",
      ".repository.ts"
    ]
  }
}
